{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "amd": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single", { "avoidEscape":  true }]
  }
}
